DECLARE SUB FLY (s!)
INPUT s
CALL FLY(s)
CLS

10 INPUT "K="; K: SCREEN 1
CLS
IF K = 0 THEN END
HGR: HCOLOR = 5
PI = 3.14
FOR X = 0 TO 2 * PI STEP PI / 200
PSET (14 * 9 + FIX(7 * SIN(K * X) * COS(X)), 28 * 4 + FIX(7 * SIN(K * X) * SIN(X)))

NEXT X: GOTO 10

SUB FLY (s)
CLS
FOR i = 1 TO 79
LOCATE 10, i: PRINT s
FOR K = 1 TO 2000: NEXT K
LOCATE 10, i: PRINT " "
NEXT i
END SUB

